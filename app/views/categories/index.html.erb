<div class="container">
    <div class="row">
        <div>
            <h3>Categorias</h3>
            <%= link_to new_category_path, remote: true, class: "btn btn-success pull-left" do %>
            <span class="glyphicon glyphicon-plus"></span>
            <% end %>
        </div>
        <table id="expenses-table" class="table table-hover" style="margin-top: 20px;">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th class="text-right">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <%= render  @categories %>
            </tbody>
        </table>
    </div>
</div>